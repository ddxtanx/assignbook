<body>
  <div id="wrapper" class="toggled">
    {% include "./sidebar.twig" %}
    <div id="page-content-wrapper">
      <h1> Registration! </h1>
      <div id="error" class="alert alert-danger">

      </div>
      <form action="register" method="POST">
        <div id="nameDiv">
          <h3> Please input your name! </h3>
          <input type="text" name="name" placeholder="Name here:" required> </input>
        </div>
        <div id="emailDiv">
          <h3> Please input your email! </h3>
          <input type="email" name="email" placeholder="Email here:" required> </input>
        </div>
        <div id="passwordDiv">
          <h3> Please input your desired password! </h3>
          <input type="password" name="password" placeholder="Password here:" required autocomplete="off"> </input>
        </div>
        <div id="passwordAgainDiv">
          <h3> Please input your password again! </h3>
          <input type="password" name="password2" placeholder="Password again:" required autocomplete="off"></input>
        </div>
        <div id="finishDiv">
          <input type="submit" class="btn btn-success" id="finishButton" name="done" value="Finish!"> </input>
        </div>
      </form>
    </div>
  </div>
</body>

